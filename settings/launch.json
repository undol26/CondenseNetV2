            "cwd":"${fileDirname}",

            // training, cifar
            "args": [
                "--nproc_per_node", "2", //8
                "train.py",
                "--model", "cdnv2_d",
                "--batch-size", "64",
                "--dataset", "cifar10",
                "--num-classes", "10",
                "--img-size", "32",
                "--lr", "0.4",
                "--warmup-lr", "0.1",
                "--warmup-epochs", "5",
                "--opt", "sgd",
                "--sched", "cosine",
                "--epochs", "2",
                "--weight-decay", "4e-5",
                "--aa", "rand-m9-mstd0.5",
                "--remode", "pixel",
                "--reprob", "0.2",
                "--data_url", "../data/cifar/cifar-10/",
                "--train_url", "save/cifar-10_test",
                "--amp",
                // "--print_model"
                "--ltdn_model",
                "--paths", "2-4-8"
            ]

